# ==============================================
# Azure OpenAI Mock Server - Docker Configuration
# ==============================================

# ==============================================
# Proxy Configuration
# ==============================================
# Set to true to proxy requests to real EdUHK API, false for mock responses
USE_EDUHK_PROXY=true

# EdUHK API Configuration (keep these secure!)
EDUHK_API_KEY=somekey
EDUHK_ENDPOINT=https://eduhk-api-ea.azure-api.net/chatgpt/v1/completion

# ==============================================
# Server Configuration
# ==============================================
# Server ports
HTTP_PORT=5555
HTTPS_PORT=5556

# Enable/disable servers (true/false)
ENABLE_HTTP=true
ENABLE_HTTPS=true

# ==============================================
# Security Configuration
# ==============================================
# API Key validation
REQUIRE_API_KEY=true
VALID_API_KEYS=someapi,dev-key-456,demo-key-789,your-production-key

# ==============================================
# SSL/TLS Configuration (for HTTPS)
# ==============================================
# SSL certificate paths (relative to app directory)
SSL_CERT_PATH=certs/server.crt
SSL_KEY_PATH=certs/server.key

# ==============================================
# Application Configuration
# ==============================================
# Node environment
NODE_ENV=production

# Request size limits
MAX_REQUEST_SIZE=50mb

# Logging level
LOG_LEVEL=info

# ==============================================
# Docker-specific Configuration
# ==============================================
# Container internal ports (don't change unless needed)
CONTAINER_HTTP_PORT=5555
CONTAINER_HTTPS_PORT=5556

# Health check endpoint
HEALTH_CHECK_PATH=/health
